@model tourism_club.Models.User
<h3>Реєстрація</h3>
<br />

<form method="post" action="">
    <table>
        <tbody>
            <tr>
                <td>Введіть ім'я користувача</td>
                <td><input type="text" value="@Model.Name" name="Name" /></td>
            </tr>
            <tr>
                <td>Введіть пошту</td>
                <td><input type="text" value="@Model.mail" name="mail" /></td>

            </tr>
            <tr>
                <td>Створіть пароль</td>
                <td><input type="password" value="@Model.password" name="password" /></td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="Зареєструватись" /></td>

            </tr>
        </tbody>
    </table>
    <a href="/User/Login">Увійти</a>
</form>
